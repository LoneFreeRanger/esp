# Enable Ipv4 forwarding at boot
sed -i '20 a echo 1 > /proc/sys/net/ipv4/ip_forward' /etc/rc.local

# Add to the bottom of /etc/iptables.firewall.rules file:

*nat
:PREROUTING ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1001 -j DNAT --to-destination 98.98.98.98:1001
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1002 -j DNAT --to-destination 98.98.98.98:1002
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1003 -j DNAT --to-destination 98.98.98.98:1003
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1004 -j DNAT --to-destination 98.98.98.98:1004
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1005 -j DNAT --to-destination 98.98.98.98:1005
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1006 -j DNAT --to-destination 98.98.98.98:1006
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1007 -j DNAT --to-destination 98.98.98.98:1007
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1008 -j DNAT --to-destination 98.98.98.98:1008
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1009 -j DNAT --to-destination 98.98.98.98:1009
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1010 -j DNAT --to-destination 98.98.98.98:1010
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1011 -j DNAT --to-destination 98.98.98.98:1011
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1012 -j DNAT --to-destination 98.98.98.98:1012
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1013 -j DNAT --to-destination 98.98.98.98:1013
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1014 -j DNAT --to-destination 98.98.98.98:1014
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1015 -j DNAT --to-destination 98.98.98.98:1015
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1016 -j DNAT --to-destination 98.98.98.98:1016
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1017 -j DNAT --to-destination 98.98.98.98:1017
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1018 -j DNAT --to-destination 98.98.98.98:1018
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1019 -j DNAT --to-destination 98.98.98.98:1019
-A PREROUTING -s [ELITE_SERVER_IP] -p tcp --dport 1020 -j DNAT --to-destination 98.98.98.98:1020
-A POSTROUTING -j MASQUERADE
COMMIT






THESE COMMANDS ALSO WORK OUTSIDE OF iptables FILE:
# Add rules to firewall to forward Nortech Ports to Nortech Boxes
iptables -t nat -A PREROUTING -p tcp --dport 1001 -j DNAT --to-destination [NORTECH_IP]:1001
iptables -t nat -A POSTROUTING -j MASQUERADE
