
# get the stunnel-deltaquest.service file here place in /etc/systemd/system
xxxxxxx


chmod 777 /etc/systemd/system/stunnel-deltaquest.service
systemctl daemon-reload

mkdir /u/tunnels
chmod -R 777 /u/tunnels
systemctl enable stunnel-deltaquest.service


# Createdeltaquest user that will use the above tunnel service
useradd -g50 -s /bin/bash -d /home/deltaquest deltaquest

cp -rf /srv/files/customer_api_user_ssh_key.tar.gz /home/deltaquest/
cd /home/deltaquest/
tar xfz customer_api_user_ssh_key.tar.gz
chmod 700 .ssh
chown api:api .ssh
cd .ssh
chmod 600 authorized_keys
chown api:sites authorized_keys
echo "Done!"
