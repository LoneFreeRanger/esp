cp -rf /srv/files/tunnels /u
chmod -R 777 /u/tunnels
systemctl enable local-tunnel.service
echo "Done!"


echo "Setting up tunnel service...."

cp -rf /srv/files/local-tunnel.service /etc/systemd/system
chmod 777 /etc/systemd/system/local-tunnel.service
systemctl daemon-reload
cp -rf /srv/files/tunnels /u
chmod -R 777 /u/tunnels
systemctl enable local-tunnel.service
echo "Done!"

echo "Creating the api user that will use the above tunnel service..."
useradd -g50 -s /bin/bash -d /home/api api

cp -rf /srv/files/customer_api_user_ssh_key.tar.gz /home/api/
cd /home/api/
tar xfz customer_api_user_ssh_key.tar.gz
chmod 700 .ssh
chown api:api .ssh
cd .ssh
chmod 600 authorized_keys
chown api:sites authorized_keys
echo "Done!"
